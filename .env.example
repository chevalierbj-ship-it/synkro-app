# Airtable Configuration
# Obtenez vos clés API sur : https://airtable.com/account
AIRTABLE_TOKEN=your_airtable_token_here
AIRTABLE_BASE_ID=your_base_id_here
AIRTABLE_EVENTS_TABLE_ID=your_events_table_id_here

# Resend Configuration (pour l'envoi d'emails)
# Obtenez votre clé API sur : https://resend.com
RESEND_API_KEY=your_resend_api_key_here

# Clerk Authentication (pour OAuth Google, Microsoft, Apple)
# Créez un compte sur : https://dashboard.clerk.com
# Créez une application et copiez votre Publishable Key
VITE_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# Stripe Configuration (pour les paiements)
# Obtenez vos clés API sur : https://dashboard.stripe.com/test/apikeys
# IMPORTANT: Utilisez les clés TEST pour le développement, puis les clés LIVE pour la production

# Clés Stripe
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Price IDs Stripe
# Créez vos produits sur : https://dashboard.stripe.com/test/products
# IMPORTANT: Les variables avec VITE_ sont exposées au frontend
# IMPORTANT: Les variables sans VITE_ sont utilisées par le backend (webhook, API)
#            Définissez les DEUX versions avec la même valeur !

# Produit: Synkro Pro - Frontend
VITE_STRIPE_PRICE_PRO_MONTHLY=price_xxxxxxxxxxxxx
VITE_STRIPE_PRICE_PRO_YEARLY=price_xxxxxxxxxxxxx

# Produit: Synkro Pro - Backend
STRIPE_PRICE_PRO_MONTHLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_PRO_YEARLY=price_xxxxxxxxxxxxx

# Produit: Synkro Entreprise - Frontend
VITE_STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxxxxxxxxxxxx
VITE_STRIPE_PRICE_ENTERPRISE_YEARLY=price_xxxxxxxxxxxxx

# Produit: Synkro Entreprise - Backend
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_ENTERPRISE_YEARLY=price_xxxxxxxxxxxxx
